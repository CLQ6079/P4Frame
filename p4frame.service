[Unit]
Description=P4Frame Media Display Service
After=multi-user.target graphical.target
Wants=graphical.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/P4Frame

# Main service command with config file
ExecStart=/usr/bin/python3 /home/pi/P4Frame/media_frame.py --config /home/pi/P4Frame/p4frame_raspi4.conf

# Environment variables
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/pi/.Xauthority"
Environment="HOME=/home/pi"

# Restart policy
Restart=on-failure
RestartSec=10

# Resource limits
MemoryMax=600M
MemorySwapMax=200M
CPUQuota=200%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=p4frame

# Security hardening (relaxed for GUI applications)
PrivateTmp=yes
ProtectSystem=false
ProtectHome=false
ReadWritePaths=/share/study/lgy_photoframe/data /home/pi/P4Frame /tmp /var/tmp
NoNewPrivileges=false

# Process management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30

[Install]
WantedBy=graphical.target